{% comment %}
  Sections Gallery - FAQ Accordion
  SEO-optimized FAQ section with rich snippets and collapsible answers
{% endcomment %}

{{ 'sections-gallery-faq-accordion.css' | asset_url | stylesheet_tag }}

<div class="sf-faq-section" 
     style="
       --sf-bg-color: {{ section.settings.background_color }};
       --sf-text-color: {{ section.settings.text_color }};
       --sf-accent-color: {{ section.settings.accent_color }};
     ">
  
  <div class="sf-faq-wrapper">
    
    {% if section.settings.heading != blank %}
      <div class="sf-faq-header">
        <h2 class="sf-faq-heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="sf-faq-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="sf-faq-accordion">
      {% for block in section.blocks %}
        {% if block.type == 'faq_item' %}
          <div class="sf-faq-item" {{ block.shopify_attributes }}>
            <button class="sf-faq-question" 
                    aria-expanded="false"
                    aria-controls="faq-answer-{{ block.id }}">
              <span class="sf-faq-question-text">{{ block.settings.question }}</span>
              <span class="sf-faq-icon">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M5 7.5L10 12.5L15 7.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
            
            <div class="sf-faq-answer" 
                 id="faq-answer-{{ block.id }}"
                 hidden>
              <div class="sf-faq-answer-content">
                {{ block.settings.answer }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.show_contact and section.settings.contact_text != blank %}
      <div class="sf-faq-contact">
        <p>{{ section.settings.contact_text }}</p>
        {% if section.settings.contact_button_text != blank %}
          <a href="{{ section.settings.contact_button_link }}" class="sf-faq-contact-btn">
            {{ section.settings.contact_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}

  </div>
</div>

{%- comment -%} Schema.org FAQPage structured data for rich snippets {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {% for block in section.blocks %}
      {% if block.type == 'faq_item' %}
        {
          "@type": "Question",
          "name": {{ block.settings.question | json }},
          "acceptedAnswer": {
            "@type": "Answer",
            "text": {{ block.settings.answer | strip_html | json }}
          }
        }{% unless forloop.last %},{% endunless %}
      {% endif %}
    {% endfor %}
  ]
}
</script>

<script>
  // FAQ Accordion Interactivity
  document.addEventListener('DOMContentLoaded', function() {
    const faqButtons = document.querySelectorAll('.sf-faq-question');
    
    faqButtons.forEach(button => {
      button.addEventListener('click', function() {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        const answerId = this.getAttribute('aria-controls');
        const answer = document.getElementById(answerId);
        
        // Toggle current item
        this.setAttribute('aria-expanded', !isExpanded);
        answer.hidden = isExpanded;
        this.classList.toggle('active');
      });
    });
    
    // Auto-expand first item if setting is enabled
    const firstButton = faqButtons[0];
    if (firstButton && firstButton.closest('.sf-faq-section').dataset.autoExpand === 'true') {
      firstButton.click();
    }
  });
</script>

{% schema %}
{
  "name": "FAQ Accordion",
  "tag": "section",
  "class": "sections-gallery-faq",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find answers to common questions about our products and services."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9fafb"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#111827"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#3b82f6"
    },
    {
      "type": "checkbox",
      "id": "show_contact",
      "label": "Show Contact Section",
      "default": true
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact Text",
      "default": "Still have questions? We're here to help!"
    },
    {
      "type": "text",
      "id": "contact_button_text",
      "label": "Contact Button Text",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "contact_button_link",
      "label": "Contact Button Link",
      "default": "/pages/contact"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your return policy?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>We offer a 30-day return policy on all unopened items. Please contact our customer service team to initiate a return.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "blocks": [
        {
          "type": "faq_item"
        },
        {
          "type": "faq_item"
        },
        {
          "type": "faq_item"
        }
      ]
    }
  ]
}
{% endschema %}