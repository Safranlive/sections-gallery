{% comment %}
  Sections Gallery - FAQ Accordion
  SEO-optimized FAQ section with rich snippets and collapsible answers
{% endcomment %}

{{ 'sections-gallery-faq-accordion.css' | asset_url | stylesheet_tag }}

<div class="sf-faq-section" 
     style="
       --sf-bg-color: {{ section.settings.background_color }};
       --sf-text-color: {{ section.settings.text_color }};
       --sf-accent-color: {{ section.settings.accent_color }};
     ">
  
  <div class="sf-faq-wrapper">
    
    {% if section.settings.heading != blank %}
      <div class="sf-faq-header">
        <h2 class="sf-faq-heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="sf-faq-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="sf-faq-accordion">
      {% for block in section.blocks %}
        {% if block.type == 'faq_item' %}
          <div class="sf-faq-item" {{ block.shopify_attributes }}>
            <button class="sf-faq-question" 
                    aria-expanded="false"
                    aria-controls="faq-answer-{{ block.id }}">
              <span class="sf-faq-question-text">{{ block.settings.question }}</span>
              <span class="sf-faq-icon">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M5 7.5L10 12.5L15 7.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
            
            <div class="sf-faq-answer" 
                 id="faq-answer-{{ block.id }}"
                 hidden>
              <div class="sf-faq-answer-content">
                {{ block.settings.answer }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.show_contact and section.settings.contact_text != blank %}
      <div class="sf-faq-contact">
        <p>{{ section.settings.contact_text }}</p>
        {% if section.settings.contact_button_text != blank %}
          <a href="{{ section.settings.contact_button_link }}" class="sf-faq-contact-btn">
            {{ section.settings.contact_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}

  </div>
</div>

{%- comment -%} Schema.org FAQPage structured data for rich snippets {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {% for block in section.blocks %}
      {% if block.type == 'faq_item' %}
        {
          "@type": "Question",
          "name": {{ block.settings.question | json }},
          "acceptedAnswer": {
            "@type": "Answer",
            "text": {{ block.settings.answer | strip_html | json }}
          }
        }{% unless forloop.last %},{% endunless %}
      {% endif %}
    {% endfor %}
  ]
}
</script>

<script>
  // FAQ Accordion Interactivity
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.sf-faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.sf-faq-question');
      const answer = item.querySelector('.sf-faq-answer');
      
      question.addEventListener('click', () => {
        const isExpanded = question.getAttribute('aria-expanded') === 'true';
        
        // Close all other items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            const otherQuestion = otherItem.querySelector('.sf-faq-question');
            const otherAnswer = otherItem.querySelector('.sf-faq-answer');
            otherQuestion.setAttribute('aria-expanded', 'false');
            otherAnswer.hidden = true;
            otherItem.classList.remove('active');
          }
        });
        
        // Toggle current item
        question.setAttribute('aria-expanded', !isExpanded);
        answer.hidden = isExpanded;
        item.classList.toggle('active');
      });
    });
  });
</script>

