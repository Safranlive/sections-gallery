{% comment %}
  Newsletter Signup Section for Sections Gallery
  Email collection form with customizable design
{% endcomment %}

<div class="newsletter-section" data-section-id="{{ section.id }}">
  <div class="newsletter-container">
    <div class="newsletter-content">
      {% if section.settings.heading != blank %}
        <h2 class="newsletter-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="newsletter-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      
      {% form 'customer' %}
        {% if form.posted_successfully? %}
          <p class="newsletter-success">{{ section.settings.success_message }}</p>
        {% endif %}
        
        {% if form.errors %}
          <p class="newsletter-error">{{ form.errors | default_errors }}</p>
        {% endif %}
        
        <div class="newsletter-form">
          <input 
            type="email" 
            name="contact[email]" 
            placeholder="{{ section.settings.placeholder_text }}"
            class="newsletter-input"
            required
          >
          <input type="hidden" name="contact[tags]" value="newsletter">
          <button type="submit" class="newsletter-button">
            {{ section.settings.button_text }}
          </button>
        </div>
        
        {% if section.settings.show_privacy_note %}
          <p class="privacy-note">{{ section.settings.privacy_text }}</p>
        {% endif %}
      {% endform %}
    </div>
  </div>
</div>

<style>
  .newsletter-section {
    padding: 60px 20px;
    background-color: {{ section.settings.background_color }};
    {% if section.settings.background_image != blank %}
      background-image: url('{{ section.settings.background_image | img_url: 'master' }}');
      background-size: cover;
      background-position: center;
    {% endif %}
  }
  
  .newsletter-container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .newsletter-content {
    text-align: center;
    padding: 3rem;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }
  
  .newsletter-heading {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: {{ section.settings.heading_color }};
  }
  
  .newsletter-subheading {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 2rem;
  }
  
  .newsletter-form {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  .newsletter-input {
    flex: 1;
    padding: 15px 20px;
    border: 2px solid {{ section.settings.input_border_color }};
    border-radius: 5px;
    font-size: 1rem;
    outline: none;
  }
  
  .newsletter-input:focus {
    border-color: {{ section.settings.button_color }};
  }
  
  .newsletter-button {
    padding: 15px 40px;
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: opacity 0.3s;
  }
  
  .newsletter-button:hover {
    opacity: 0.9;
  }
  
  .newsletter-success {
    color: #27ae60;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .newsletter-error {
    color: #e74c3c;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .privacy-note {
    font-size: 0.85rem;
    color: #999;
    margin-top: 1rem;
  }
  
  @media (max-width: 768px) {
    .newsletter-form {
      flex-direction: column;
    }
    
    .newsletter-heading {
      font-size: 2rem;
    }
    
    .newsletter-content {
      padding: 2rem 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter Signup",
  "class": "newsletter-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join Our Newsletter"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get exclusive deals and updates delivered to your inbox"
    },
    {
      "type": "text",
      "id": "placeholder_text",
      "label": "Input Placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success Message",
      "default": "Thanks for subscribing!"
    },
    {
      "type": "checkbox",
      "id": "show_privacy_note",
      "label": "Show Privacy Note",
      "default": true
    },
    {
      "type": "textarea",
      "id": "privacy_text",
      "label": "Privacy Note",
      "default": "We respect your privacy. Unsubscribe anytime."
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "input_border_color",
      "label": "Input Border Color",
      "default": "#dddddd"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup",
      "category": "Sections Gallery"
    }
  ]
}
{% endschema %}