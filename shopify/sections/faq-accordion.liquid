{% schema %}
{
  "name": "FAQ Accordion",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "max_blocks": 20,
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Accordion",
      "blocks": [
        {
          "type": "faq"
        },
        {
          "type": "faq"
        },
        {
          "type": "faq"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .faq-section {
    padding: 4rem 2rem;
    background: {{ section.settings.background_color }};
  }
  
  .faq-heading {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }
  
  .faq-container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .faq-item {
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 1rem;
  }
  
  .faq-question {
    padding: 1.5rem;
    cursor: pointer;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.3s;
  }
  
  .faq-question:hover {
    background: #f5f5f5;
  }
  
  .faq-question::after {
    content: '+';
    font-size: 1.5rem;
    transition: transform 0.3s;
  }
  
  .faq-item.active .faq-question::after {
    transform: rotate(45deg);
  }
  
  .faq-answer {
    padding: 0 1.5rem;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s, padding 0.3s;
  }
  
  .faq-item.active .faq-answer {
    padding: 1.5rem;
    max-height: 500px;
  }
</style>

<section class="faq-section">
  {% if section.settings.heading != blank %}
    <h2 class="faq-heading">{{ section.settings.heading }}</h2>
  {% endif %}
  
  <div class="faq-container">
    {% for block in section.blocks %}
      <div class="faq-item" {{ block.shopify_attributes }}>
        <div class="faq-question" onclick="this.parentElement.classList.toggle('active')">
          <span>{{ block.settings.question }}</span>
        </div>
        <div class="faq-answer">
          {{ block.settings.answer }}
        </div>
      </div>
    {% endfor %}
  </div>
</section>